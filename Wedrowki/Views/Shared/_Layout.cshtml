<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — Piesze wędrówki</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="jumbotron bg-dark text-white custom-shadow">
            <h1 class="display-4">Piesze Wędrówki</h1>
                <p class="lead">
                    Przeżyj, zapisz, zapamiętaj!
                </p>
            <hr class="my-3">
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year — Piesze Wędrówki, Kaczyński Bartłomiej, Z713</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js" rel="stylesheet"></script>
    <script type="text/javascript">
    $(document).ready(function () {
       $(".datepicker").datepicker({
          dateFormat: "dd/mm/yy",
          changeMonth: true,
           changeYear: true,
           yearRange: "-60:+0"
          });
       });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
